pipeline {
  agent {
    kubernetes {
      label 'spacemesh-pod'
      yamlFile 'jenkins/jobs/KubernetesPod.yaml'
    }
  }
  stages {
    stage('Run python') {
      steps {
        container('python') {
          sh 'python --version'
        }
      }
    }
    stage('Run kubectl') {
      steps {
        container('kubectl') {
          sh 'kubectl get namespaces'
        }
      }
    }
  }
}

